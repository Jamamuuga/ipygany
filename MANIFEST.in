include LICENSE.txt
include README.md

include tsconfig.json
include package.json
include webpack.config.js

# Documentation
graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
recursive-exclude examples *

# Tests
graft tests
prune tests/build

# Javascript files
graft ipygany/nbextension
graft ipygany/labextension
graft src
graft css
prune **/node_modules
prune coverage
prune lib

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
